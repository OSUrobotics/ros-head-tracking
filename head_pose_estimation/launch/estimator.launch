<launch>
	<machine
		name="harris1"
		address="10.68.0.1"
		default="never"
		ros-package-path="/u/lazewatskyd/ros-pkgs:/opt/ros/electric/stacks"
	/>
	<machine
		name="harris2"
		address="10.68.0.2"
		default="never"
		ros-package-path="/u/lazewatskyd/ros-pkgs:/opt/ros/electric/stacks"
	/>
	
	<arg name="camera" default="camera"/>
	<include file="$(find head_pose_estimation)/launch/face_tracker_kinect.launch">
		<arg name="camera" value="$(arg camera)"/>
	</include>

	<node name="head_pose_estimator" type="head_pose_estimation" pkg="head_pose_estimation" output="screen" machine="harris2">
		<remap from="cloud" to="$(arg camera)/depth_registered/points"/>
		<param name="tree_path" value="$(find head_pose_estimation)/trees/tree"/>
		<param name="ntrees" value="10"/>
		<param name="max_variance" value="800.0"/>
		<param name="larger_radius_ratio" value="1.0"/>
		<param name="smaller_radius_ratio" value="6.0"/>
		<param name="stride" value="5"/>
		<param name="head_threshold" value="400"/>
	</node>
	
	<node name="head_pose_filter" type="head_pose_filter.py" pkg="head_pose_estimation" output="screen">
		<param name="window_size" value="5"/>
	</node>
</launch>
